<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	
	<!-- settings 설정 카멜케이스로 true 사용 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<!-- typeAliases 별명 -->
	<typeAliases>
		<typeAlias alias="UserDTO" type="com.gdu.app12.domain.UserDTO"/> <!-- mapper에서 사용 domain 패키지에 BbsDTO를 Board로 부르겠다. -->
		<typeAlias alias="LeaveUserDTO" type="com.gdu.app12.domain.LeaveUserDTO"/>
		<typeAlias alias="SleepUserDTO" type="com.gdu.app12.domain.SleepUserDTO"/>
		<typeAlias alias="UserAccessDTO" type="com.gdu.app12.domain.UserAccessDTO"/>
	</typeAliases>
	
	<!-- 환경 설정 environments  DB접속 정보 connection pool
 	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
    			<property name="driver" value="${driver}"/>
       			<property name="url" value="${url}"/>
        		<property name="username" value="${username}"/>
        		<property name="password" value="${password}"/>
      		</dataSource>
    	</environment>
 	</environments>
	
